<h1>New Blog Post</h1>

<%= form_with model: @blog do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content %><br>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<h5> <%= link_to 'back to home', blogs_path %></h5> 